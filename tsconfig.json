{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "paths": {
      "@lib/*": ["lib/*"],
      "@modules/*": ["modules/*"],
      "@useCases/*": ["useCases/*"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
